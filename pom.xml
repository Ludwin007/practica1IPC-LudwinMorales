<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.triforce</groupId>
    <artifactId>Practica1IPC</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    
    <name>Practica1IPC</name>
    <description>Sistema de administración de eventos - Reino de Hyrule</description>
    
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <exec.mainClass>com.triforce.hyrule.gui.HyruleEventsApp</exec.mainClass>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>8.0.33</version>
        </dependency>
        
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.12.0</version>
        </dependency>      
        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf</artifactId>
            <version>3.2.5</version>
        </dependency>
    </dependencies>
    
    <build>
        <finalName>HyruleEventsSystem</finalName>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                    <encoding>UTF-8</encoding>
                    <compilerArgs>
                        <arg>--add-exports</arg>
                        <arg>java.desktop/sun.awt=ALL-UNNAMED</arg>
                        <arg>--add-exports</arg>
                        <arg>java.desktop/sun.swing=ALL-UNNAMED</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>com.triforce.hyrule.gui.HyruleEventsApp</mainClass>
                    <options>
                        <option>-Djava.awt.headless=false</option>
                        <option>-Dswing.aatext=true</option>
                        <option>-Dswing.plaf.metal.controlFont=Dialog-12</option>
                        <option>-Dswing.plaf.metal.userFont=Dialog-12</option>
                        <option>-Dsun.java2d.noddraw=true</option>
                        <option>-Dsun.java2d.opengl=false</option>
                        <option>-Dfile.encoding=UTF-8</option>
                        <option>-Duser.timezone=America/Guatemala</option>
                    </options>
                    <systemProperties>
                        <systemProperty>
                            <key>java.awt.headless</key>
                            <value>false</value>
                        </systemProperty>
                        <systemProperty>
                            <key>awt.useSystemAAFontSettings</key>
                            <value>on</value>
                        </systemProperty>
                        <systemProperty>
                            <key>swing.aatext</key>
                            <value>true</value>
                        </systemProperty>
                    </systemProperties>
                    <args>
                        <arg>--enable-gui</arg>
                    </args>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.triforce.hyrule.gui.HyruleEventsApp</mainClass>
                                    <manifestEntries>
                                        <Implementation-Title>Reino de Hyrule - Sistema de Gestión de Eventos</Implementation-Title>
                                        <Implementation-Version>${project.version}</Implementation-Version>
                                        <Built-By>${user.name}</Built-By>
                                        <Built-Date>${maven.build.timestamp}</Built-Date>
                                        <Java-Version>${java.version}</Java-Version>
                                    </manifestEntries>
                                </transformer>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>gui</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.triforce.hyrule.gui.HyruleEventsApp</mainClass>
                            <options>
                                <option>-Djava.awt.headless=false</option>
                                <option>-Dswing.defaultlaf=javax.swing.plaf.nimbus.NimbusLookAndFeel</option>
                            </options>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>